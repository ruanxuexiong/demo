<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_dynamic_scrollview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/dynamic_selector_common_btn_white_grally_bold"
        android:text="scrollview构建动态页面" />

    <Button
        android:id="@+id/btn_dynamic_listview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/dynamic_selector_common_btn_white_grally_bold"
        android:text="listview构建动态页面" />

    <Button
        android:id="@+id/btn_dynamic_part"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/dynamic_selector_common_btn_white_grally_bold"
        android:text="部分动态页面构成" />

</LinearLayout>