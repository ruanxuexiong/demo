<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zftlive.android.sample.progressbar.NumberPbActivity" >

    <com.zftlive.android.library.widget.progressbar.NumberProgressBar
        android:id="@+id/numberbar1"
        style="@style/Widget_NumberProgressBar_Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        custom:anl_progress_current="0" />

    <com.zftlive.android.library.widget.progressbar.NumberProgressBar
        android:id="@+id/numberbar2"
        style="@style/Widget_NumberProgressBar_Passing_Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        custom:anl_progress_current="20" />

    <com.zftlive.android.library.widget.progressbar.NumberProgressBar
        android:id="@+id/numberbar3"
        style="@style/Widget_NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        custom:anl_progress_current="30" />

    <com.zftlive.android.library.widget.progressbar.NumberProgressBar
        android:id="@+id/numberbar4"
        style="@style/Widget_NumberProgressBar_Grace_Yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        custom:anl_progress_current="40" />

    <com.zftlive.android.library.widget.progressbar.NumberProgressBar
        android:id="@+id/numberbar5"
        style="@style/Widget_NumberProgressBar_Warning_Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        custom:anl_progress_current="50" />

    <com.zftlive.android.library.widget.progressbar.NumberProgressBar
        android:id="@+id/numberbar6"
        style="@style/Widget_NumberProgressBar_Funny_Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        custom:anl_progress_current="60" />

    <com.zftlive.android.library.widget.progressbar.NumberProgressBar
        android:id="@+id/numberbar7"
        style="@style/Widget_NumberProgressBar_Beauty_Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        custom:anl_progress_current="70" />

    <com.zftlive.android.library.widget.progressbar.NumberProgressBar
        android:id="@+id/numberbar8"
        style="@style/Widget_NumberProgressBar_Twinkle_Night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        custom:anl_progress_current="80" />

</LinearLayout>