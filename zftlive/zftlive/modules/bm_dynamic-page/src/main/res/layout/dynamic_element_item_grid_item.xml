<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_grid_item"
    android:layout_width="match_parent"
    android:layout_height="68.3dp">

    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/dyanmic_common_circle_default" />

    <TextView
        android:id="@+id/tv_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/common_module_black_666666"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_news_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iv_item_icon"
        android:layout_marginRight="-2dp"
        android:src="@drawable/dynamic_shape_circle_dot"
        android:visibility="visible" />

</RelativeLayout>
