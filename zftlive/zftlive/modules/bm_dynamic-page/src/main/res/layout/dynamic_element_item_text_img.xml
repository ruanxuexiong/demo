<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_banner_item"
    android:layout_width="160dp"
    android:layout_height="150dp"
    android:background="@drawable/dynamic_shape_bold_transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="159dp"
        android:layout_height="105dp"
        android:layout_margin="0.34dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/common_module_default_picture"
        />

    <TextView
        android:id="@+id/tv_title_text"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="图文并排"
        android:textColor="@color/common_module_black_666666"
        android:textSize="12sp" />

</LinearLayout>
